<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

  <!-- 시퀀스 조회 -->
  <select id="getSequence" resultType="int">
    SELECT notice_seq.nextval FROM dual
  </select>

  <!-- 공지사항 추가 -->
  <insert id="add">
    INSERT INTO notice(
      notice_id, title, content, author, created_at
    ) VALUES(
      #{noticeId}, #{title}, #{content}, #{author}, #{createdAt}
    )
  </insert>

  <!-- 공지사항 수정 -->
  <update id="update">
    UPDATE notice
    SET title = #{title}, content = #{content}, author = #{author}
    WHERE notice_id = #{noticeId}
  </update>

  <!-- 공지사항 삭제 -->
  <delete id="delete">
    DELETE FROM notice WHERE notice_id = #{noticeId}
  </delete>

  <!-- 공지사항 리스트 조회 -->
  <select id="list" resultType="com.kh.topgunFinal.dto.NoticeDto">
    SELECT * FROM notice ORDER BY created_at DESC
  </select>

  <!-- 공지사항 상세 조회 -->
  <select id="detail" parameterType="int" resultType="com.kh.topgunFinal.dto.NoticeDto">
    SELECT * FROM notice WHERE notice_id = #{noticeId}
  </select>

</mapper>